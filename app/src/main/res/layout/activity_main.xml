<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context="com.example.mariajosemolina.mypostcard_mjmolinacontreras.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/overlay1"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/overlay2"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/overlay3"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/overlay4"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/overlay5"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />
    </LinearLayout>


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/android_postcard" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/MerryChristmas"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="11dp"
            android:background="#00838f"
            android:fontFamily="@font/nunitoblack"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="@string/en"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"
            android:background="#80CBC4"
            android:fontFamily="@font/nunitoblack"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="@string/de"
            android:textColor="#455A64"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/logo_android1"
            android:layout_width="63dp"
            android:layout_height="70dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />

        <ImageView
            android:id="@+id/logo_android2"
            android:layout_width="63dp"
            android:layout_height="70dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />

        <ImageView
            android:id="@+id/logo_android3"
            android:layout_width="63dp"
            android:layout_height="70dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />

        <ImageView
            android:id="@+id/logo_android4"
            android:layout_width="63dp"
            android:layout_height="70dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />

        <ImageView
            android:id="@+id/logo_android5"
            android:layout_width="63dp"
            android:layout_height="70dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />
    </LinearLayout>

</LinearLayout>