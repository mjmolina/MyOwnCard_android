<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context="com.example.mariajosemolina.mypostcard_mjmolinacontreras.MainActivity">

    <LinearLayout
        android:layout_width="546dp"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/overlay1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/overlay2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/overlay3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/overlay4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/overlay5"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:paddingLeft="65dp"
            android:paddingRight="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/if__11_1716842"
            android:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="235dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/MerryChristmas"
            android:layout_toStartOf="@+id/MerryChristmas"
            android:adjustViewBounds="false"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/android_postcard"
            android:visibility="visible" />

        <TextView
            android:id="@+id/MerryChristmas"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView2"
            android:background="#00838f"
            android:fontFamily="@font/nunitoblack"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="@string/en"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/image2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:background="#80CBC4"
            android:fontFamily="@font/nunitoblack"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="@string/de"
            android:textColor="#455A64"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="550dp"
        android:layout_height="34dp">


        <ImageView
            android:id="@+id/logo_android1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />


        <ImageView
            android:id="@+id/logo_android2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="165dp"
            android:layout_marginStart="165dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />

        <ImageView
            android:id="@+id/logo_android3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="265dp"
            android:layout_marginStart="265dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />

        <ImageView
            android:id="@+id/logo_android4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="365dp"
            android:layout_marginStart="365dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />

        <ImageView
            android:id="@+id/logo_android5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="465dp"
            android:layout_marginStart="465dp"
            android:paddingLeft="22dp"
            android:paddingRight="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/androidnavidad" />

    </RelativeLayout>

</LinearLayout>